{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "isolatedModules": false,
    "noEmit": false,
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    }
  },
  "include": ["server/**/*.ts"]
}
